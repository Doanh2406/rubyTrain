<%= form_with(model: product) do |form| %>
  <% if product.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title , class:"form-control",placeholder:"Title" %>
  </div>

  <div class="form-group">
    <%= form.label :description, style: "display: block" %>
    <%= form.text_area :description, :rows => 6 , class:"form-control",placeholder:"Description" %>
  </div>

  <div class="form-group">
    <%= form.label :price, style: "display: block" %>
    <%= form.text_field :price , class:"form-control",placeholder:"Price" %>
  </div>
 
  <div class="form-group">
    <%= form.label :img, style: "display: block" %>
    <%= form.file_field :img , class:"form-control",placeholder:"img", accept: "image/png, image/jpg, image/jpeg, image/gif" %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
  