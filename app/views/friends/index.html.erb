<p style="color: green">
  <%= notice %>
</p>

<% if user_signed_in? %>
<h1>Friends</h1>
  <table id="friends" class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Twiter</th>
      <th>UserID</th>
      <th colspan="0">Action</th>
    </thead>
    <tbody>
      <% @friends.each do |friend| %>
        <% if friend.user == current_user %>
          <%= render friend %>
        <% end %>
      <% end %>
    </tbody>
  </table>
  <p><%= will_paginate @friends %></p>
  <%= link_to "New friend" , new_friend_path, class:"btn btn-secondary" %>
<% else %>
  <h1>
    Welcome to my app
  </h1>
<% end %>
